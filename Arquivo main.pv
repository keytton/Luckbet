import telebot
import openai
import os

# Pegando os tokens do ambiente
TELEGRAM_TOKEN = os.environ.get("TELEGRAM_TOKEN")
OPENAI_API_KEY = os.environ.get("OPENAI_API_KEY")

# Verifique se os tokens foram carregados
if not TELEGRAM_TOKEN or not OPENAI_API_KEY:
    print("❌ Erro: variáveis de ambiente não definidas")
    exit()

bot = telebot.TeleBot(TELEGRAM_TOKEN)
openai.api_key = OPENAI_API_KEY

# Mensagem de boas-vindas
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(
        message,
        "🎰 *Bem-vindo ao Luckbet!*\n"
        "Eu sou sua assistente virtual com inteligência artificial 🤖\n\n"
        "🎁 *Bônus de Boas-Vindas:* Ganhe até 100% na sua primeira recarga!\n"
        "💳 Aceitamos *Pix* e *Criptomoedas*.\n"
        "🎮 Explore nossos jogos: Slots, Ao Vivo, Esportes e mais.\n\n"
        "💬 *Digite sua pergunta e vamos começar!*",
        parse_mode="Markdown"
    )

# Processamento da mensagem com IA
@bot.message_handler(func=lambda message: True)
def handle_message(message):
    try:
        response = openai.ChatCompletion.create(
            model="gpt-3.5-turbo",
            messages=[
                {
                    "role": "system",
                    "content": "Você é uma assistente chamada Luckbet. Fale sempre em português e ajude com dúvidas sobre cassino, apostas e bônus."
                },
                {
                    "role": "user",
                    "content": message.text
                }
            ]
        )
        reply = response['choices'][0]['message']['content']
        bot.reply_to(message, reply)
    except Exception as e:
        print("Erro ao responder:", e)
        bot.reply_to(message, "⚠️ Ocorreu um erro. Tente novamente mais tarde.")

# Iniciar o bot
print("🤖 Bot rodando...")
bot.polling()
